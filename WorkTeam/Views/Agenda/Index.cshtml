@model IEnumerable<WorkTeam.Models.Eventos>

@{
    ViewBag.Title = "Index";
}

<h2>Agenda de Eventos</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<form method="post">
    <input type="text" placeholder="Buscar fecha" />
    <input type="submit" value="Buscar" />
</form>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hora)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Evento)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Hora)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Fecha)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Evento)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Hora }) |
        @Html.ActionLink("Details", "Details", new { id = item.Hora }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Hora })
    </td>
</tr>
}

</table>
